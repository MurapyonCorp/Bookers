<h1>Editing Book</h1>
<%= form_with model: @list, url:"/books/#{@list.id}", local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<span>
  <%= link_to "Show", book_path(@list.id) %>
  <%= link_to "Back", books_path %>
</span>
<h1>Books</h1>
<% @lists.each do |list| %>
  <h5>Title</h5>
  <span><%= list.title %></span>
  <h5>Body</h5>
  <span><%= list.body %></span>
  <span>
    <%= link_to "Show", book_path(list.id) %>
    <%= link_to "Edit", edit_book_path(list.id) %>
    <%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </span>
<% end %>
  <h2>New book</h2>
  <% if @list.errors.any? %>
    <%= @list.errors.count %> prohibited this book from being saved:
    <% @list.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: @list, url:'/books', local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

